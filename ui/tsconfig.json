{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "preserve",
    "moduleResolution": "Bundler",
    "rootDir": "../",
    "paths": {
      "@/*": ["./*"]
    },
    "outDir": "./dist",
    "allowJs": false,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": ["**/*.{ts,tsx,vue}", "../common/**/*.ts", "../common/**/*.d.ts", "../vite.config.ts"]
}
